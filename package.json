	"keywords":["javascript", "reload", "watch", "recompile"],
	"author":"hypno2000",
	"version":"1.0.0",
	"licenses":[
		{
			"type":"MIT",
			"url":"http://opensource.org/licenses/mit-license.php"
		}
	],

